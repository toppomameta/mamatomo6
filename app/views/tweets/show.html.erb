<div class="col-md-12">
  <h1>投稿詳細</h1>
    <div class="article">
      <p><%= simple_format(@tweet.description) %></p>
      <p>投稿日:<%= @tweet.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %>
      </p>
      <p><%= image_tag @tweet.image, size: "50x50" %>
         <%= @tweet.user.nick_name %>
      </p>
      <%= link_to "編集", edit_tweet_path(@tweet), class: "btn btn-default" %>
      <%= link_to "削除", tweet_path(@tweet), class: "btn btn-default", method: :delete %>
   </div>
</div>
